<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContimeterDisplay.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Button
                x:Name="OnBtn"
                Text="On" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnOnBtnClicked"
                HorizontalOptions="Fill" />
            <Button
                x:Name="OffBtn"
                Text="Off"
                Clicked="OnOffBtnClicked"
                />

            <Entry
                x:Name="ReferenceTemperatureEntry"
                Placeholder="Enter reference temperature"
                Keyboard="Numeric"
                HorizontalOptions="Fill"
                Margin="0,20,0,0"/>

            <Button
                x:Name="CalibrateBtn"
                Text="Calibrate"
                Clicked="OnCalibrateBtnClicked"
                HorizontalOptions="Fill"/>

            <Label x:Name="StatusLabel"
               Text=""
               TextColor="Green"
               FontSize="14"
               HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
